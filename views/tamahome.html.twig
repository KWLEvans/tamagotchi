<html>
    <head>
        <meta charset="utf-8">
        <title>Create a Tamagotchi!</title>
        <link href="css/bootstrap.min.css" rel="stylesheet" type="text/css">
        <link href="css/styles.css" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Press+Start+2P|Barrio" rel="stylesheet">
        <script src="js/jquery-3.1.1.js"></script>
        <script src="js/scripts.js"></script>
    </head>
    <body>
        <div class="jumbotron jumbotron-fluid">
            <h1 id="jumbotron-header">Welcome to {{ tamagotchi.get('name') }}'s home!</h1>
        </div>
        <div class="card">
            <img id="tamagotchi-gif" class="card-img-top" src="image/hatch.gif" alt="tamagotchi doing his thang">
            <div class="card-block">
                <form id="feed-form" action="/feed" method="post">
                  <h4>Hunger</h4>
                    <div class="progress">
                        <div id="bar1" class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" style="width: {{ tamagotchi.get("hunger") }}%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </form>
                <form id="nap-form" action="/nap" method="post">
                  <h4>Exhaustion</h4>
                    <div class="progress">
                        <div id="bar2" class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" style="width: {{ tamagotchi.get("sleep") }}%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </form>
                <form id="play-form" action="/play" method="post">
                  <h4>Boredom</h4>
                    <div class="progress">
                        <div id="bar3" class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" style="width: {{ tamagotchi.get("attention") }}%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </form>
            </div>
        </div>
        <div id="buttons-div" class="btn-group btn-group-lg">
            <button id="feed-button" class="btn bg-success" disabled>Feed</button>
            <button id="nap-button" class="btn bg-success" disabled>Nap</button>
            <button id="play-button" class="btn bg-success" disabled>Play</button>
        </div>
    </body>
</html>
