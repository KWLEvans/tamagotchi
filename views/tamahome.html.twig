<html>
    <head>
        <meta charset="utf-8">
        <title>Create a Tamagotchi!</title>
        <link href="css/bootstrap.min.css" rel="stylesheet" type="text/css">
        <link href="css/styles.css" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
        <script src="js/jquery-3.1.1.js"></script>
        <script src="js/scripts.js"></script>
    </head>
    <body>
        <div class="jumbotron jumbotron-fluid">
            <h1 id="jumbotron-header">Welcome to {{ tamagotchi.get('name') }}'s home!</h1>
        </div>
        <div class="card">
            <img id="tamagotchi-gif" class="card-img-top" src="image/tamagotchi.gif" alt="tamagotchi doing his thang">
            <div class="card-block">
                <form action="/feed" method="post">
                    <div class="progress">
                        <div id="bar1" class="progress-bar progress-bar-striped bg-warning progress-bar-animated" role="progressbar" style="width: {{ tamagotchi.get("hunger") }}%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <button class="btn">Feed</button>
                </form>
                <form action="/nap" method="post">
                    <div class="progress">
                        <div id="bar2" class="progress-bar progress-bar-striped bg-warning progress-bar-animated" role="progressbar" style="width: {{ tamagotchi.get("sleep") }}%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <button class="btn">Nap</button>
                </form>
                <form action="/play" method="post">
                    <div class="progress">
                        <div id="bar3" class="progress-bar progress-bar-striped bg-warning progress-bar-animated" role="progressbar" style="width: {{ tamagotchi.get("attention") }}%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <button class="btn">Play</button>
                </form>
            </div>
        </div>
    </body>
</html>
